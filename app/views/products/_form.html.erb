<div class="card">
  <div class="card-body">
    <%= form_with(model: product, local: true) do |form| %>
      <% if product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-6 col-lg-6 col-xs-12 col-sm-12">
          <div class="form-group">
            <label for="name">Nombre</label>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <label for="description">Descripción</label>
            <%= form.text_area :description, class: 'form-control' %>
          </div>

          <div class="form-group">
            <label for="category_id">Categoría</label>
            <%= form.collection_select :category_id, Category.all, :id, :description, { include_blank: 'Escoger categoría' }, { class: 'form-control' } %>
          </div>
          <div class="form-group">
            <label for="tags">Etiquetas</label>
            <%= form.text_field :tags, class: 'tags form-control', multiple: true %>
         </div>
         <div class="form-group">
          <label for="trademark">Marca</label>
          <%= form.text_field :trademark, class: 'form-control' %>
         </div>
         <div class="form-group">
          <label for="measurement_unit">Unidad de medida</label>
          <%= form.text_field :measurement_unit, class: 'form-control' %>
         </div>
         <div class="form-group">
          <div class="row">
            <div class="col-6">
              <label for="estimated_delivery_time">Tiempo estimado de entrega</label>
              <%= form.number_field :estimated_delivery_time, value: form.object.estimated_delivery_time, class: 'form-control' %>
            </div>
            <div class="col-6">
              <label for="time_span">Lapso</label>
              <%= form.collection_select :time_span, @time_spans, :to_s, :to_s, { include_blank: 'Escoger' }, { class: 'form-control' } %>
            </div>
          </div>
         </div>

         <div class="form-group">
          <label for="price">Precio</label>
          <%= form.text_field :price, class: 'form-control' %>
         </div>
        </div>
      </div>

      <div class="actions">
        <%= form.submit 'Guardar', class: 'btn btn-success' %>
      </div>
  <% end %>
  </div>
</div>