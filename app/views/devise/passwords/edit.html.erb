<% provide :title, 'Usuarios' %>
<!--===============================================================================================-->	
<%= stylesheet_link_tag 'registrations-main' %>
<%= stylesheet_link_tag 'registrations-util' %>
<!--===============================================================================================-->

<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100">
      <div class="login100-form-title" style="background-image: url(<%= asset_path 'caja-herramientas-closeup.jpg' %>);">
        <span class="login100-form-title-1">
          Recuperar contraseña
        </span>
      </div>
      <%= render 'devise/shared/error_messages' %>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'login100-form validate-form' }) do |form| %>
        <%= form.hidden_field :reset_password_token %>
        <%= form.full_error :reset_password_token %>

        <div class="wrap-input100 validate-input m-b-26" data-validate="Por favor ingresar contraseña">
          <span class="label-input100">Nueva contraseña</span>
          <%= form.password_field :password, class: 'input100', placeholder: 'Escribir contraseña' %>
          <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input m-b-26" data-validate="Por favor ingresar contraseña">
          <span class="label-input100">Confirmar contraseña</span>
          <%= form.password_field :password_confirmation, class: 'input100', placeholder: 'Escribir contraseña' %>
          <span class="focus-input100"></span>
        </div>

        <div style="margin-top: 5%;" class="container-login100-form-btn">
          <%= form.submit 'Actualizar contraseña', class: 'login100-form-btn' %>
        </div>
      <% end %>
      <div style="padding: 5%">
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>

