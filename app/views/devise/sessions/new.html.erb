<% provide :title, 'Usuarios' %>
<!--===============================================================================================-->	
<%= stylesheet_link_tag 'registrations-main' %>
<%= stylesheet_link_tag 'registrations-util' %>
<!--===============================================================================================-->

	
<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100">
      <div class="login100-form-title" style="background-image: url(<%= asset_path 'obrero-con-taladro.jpg' %>);">
        <span class="login100-form-title-1">
          Ingresar
        </span>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login100-form validate-form' }) do |form| %>
        <div class="wrap-input100 validate-input m-b-26" data-validate="Por favor ingresar el email">
          <span class="label-input100">Email</span>
          <%= form.email_field :email, class: 'input100' %>
          <span class="focus-input100"></span>
        </div>
          
        <div class="wrap-input100 validate-input m-b-18" data-validate = "Por favor ingresar la contraseÃ±a">
          <span class="label-input100">Password</span>
          <%= form.password_field :password, class: 'input100' %>
          <span class="focus-input100"></span>           
        </div>

        <div class="flex-sb-m w-full p-b-30">
          <div class="contact100-form-checkbox">
              <%= form.check_box :remember_me, class: 'input-checkbox100', as: :boolean if devise_mapping.rememberable? %>
							<label class="label-checkbox100" for="user_remember_me">
								Recordarme
							</label>
          </div>
        </div>
        <div>
          <%= recaptcha_tags %>
        </div>
        <div style="margin-top: 5%;" class="container-login100-form-btn">
          <%= form.submit 'Ingresar', class: 'login100-form-btn' %>
        </div>
      <% end %>
      <div style="padding: 5%">
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>
