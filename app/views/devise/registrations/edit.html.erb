
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<div class="card">
  <img class="card-img-top" src="<%= asset_path 'obrero-cortando.jpg' %>;" size="100%">
  <div class="card-body">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'devise/shared/error_messages' %>
      <%# f.error_notification %>

      <div class="form-group">
        <label for="name">Nombre</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">
              <i class="fa fa-id-card"></i>
            </div>
          </div>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      
      <div class="form-group">
        <label for="email">Email</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">
              <i class="fa fa-id-card"></i>
            </div>
          </div>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <label for="password">Nueva Contrase침a</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">
              <i class="fa fa-id-card"></i>
            </div>
          </div>
          <%= f.password_field :password,
            placeholder: "Dejar en blanco si no se va a cambiar",
            required: false,
             class: 'form-control' %>
        </div>
      </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>


      <div class="form-group">
        <label for="password_confirmation">Confirmaci칩n de nueva contrase침a</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">
              <i class="fa fa-id-card"></i>
            </div>
          </div>
          <%= f.password_field :password_confirmation,
            required: false,
             class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <label for="current_password">Contrase침a actual</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">
              <i class="fa fa-id-card"></i>
            </div>
          </div>
          <%= f.password_field :current_password,
            placeholder: "Para confirmar los cambios",
            required: false,
             class: 'form-control' %>
        </div>
      </div>
      

      <div class="form-actions">
        <%= f.button :submit, "Update" %>
      </div>
    <% end %>

    <%= link_to "Back", :back %>
  </div>
</div>