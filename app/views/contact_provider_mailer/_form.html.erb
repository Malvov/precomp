<div class="modal fade" id="contact-provider-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Contactar a <%= @provider.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for :contact_provider_mailer, url: provider_contact_provider_mailer_index_path(@provider.id), method: :post, remote: true  do |f| %>
        <div class="modal-body">
            <div class="form-group">
                <%= f.label 'Nombre', class: 'control-label' %>
                <%= f.text_field :from, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label 'Mensaje' %>
                <%= f.text_area :body, class: 'form-control' %>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
          <%= f.submit 'Enviar', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>