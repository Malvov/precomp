<% provide :head_tags do %>
  <meta name='turbolinks-visit-control' content='reload'>
  <script>
    document.addEventListener("DOMContentLoaded", function(){
      initShowMap(<%=@provider.address.latitude%>, <%=@provider.address.longitude%>)
    });
  </script>
<% end %>
<% provide :title, @provider.name %>

<p>
  <strong>Name:</strong>
  <%= @provider.name %>
</p>

<p>
  <strong>Max product quantity:</strong>
  <%= @provider.max_product_quantity %>
</p>

<p>
  <strong>Subscription end date:</strong>
  <%= @provider.subscription_end_date %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @provider.phone %>
</p>

<p>
  <strong>Personal contact:</strong>
  <%= @provider.personal_contact %>
</p>

<p>
  <strong>Administrative contact:</strong>
  <%= @provider.administrative_contact %>
</p>

<p>
  <strong>Email:</strong>
  <%= @provider.email %>
</p>

<p>
  <strong>Webpage link:</strong>
  <%= @provider.webpage_link %>
</p>

<p>
  <strong>Address:</strong>
  <%= @provider.address.longitude.to_s + ' ' + @provider.address.latitude.to_s %>
</p>

<p>
  <strong>Is active:</strong>
  <%= @provider.is_active %>
</p>

<p>
  <div id="show-map">
  </div>
</p>

<%= link_to 'Edit', edit_provider_path(@provider) %> |
<%= link_to 'Back', providers_path %>
