
<%= simple_form_for @provider, html: { class: 'bottom' } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, class: 'form-control' %>
    <%= f.input :contact %>
    <%= f.input :max_product_quantity %>
    <%= f.text_field :subscription_end_date, class: 'form-control datepicker' %>
    <%= f.input :phone %>
    <%= f.input :personal_contact %>
    <%= f.input :administrative_contact %>
    <%= f.input :email %>
    <%= f.input :webpage_link %>
    <%= f.input :address %>
    <%= f.input :is_active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
